@model Project.Models.Song

@Html.ValidationSummary(true)
@Html.AntiForgeryToken()

<fieldset>
    <legend>Цитата</legend>

    <div class="editor-label">
        @Html.LabelFor(model => model.Singer)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Singer, new { style = "width: 300px" })
        @Html.ValidationMessageFor(model => model.Singer)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Title, new { style = "width: 300px" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Quote)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Quote, 5, 60, new { @class = "trigger" })
        @Html.ValidationMessageFor(model => model.Quote)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Translation)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Translation, 5, 60, new { @class = "trigger" })
        @Html.ValidationMessageFor(model => model.Translation)
    </div>
    
    <p>
        <input type="submit" name="Save" value="Сохранить" />
    </p>

    @Html.ValidationMessage("Save")

</fieldset>

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>